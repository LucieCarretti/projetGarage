{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<section class="form-section login-section">

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Tu es connecté en tant que <span class="login-to-email">{{ app.user.userIdentifier }}</span>. <a href="{{ path('app_logout') }}" class="logout-text">Se déconnecter</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal form-title">Connexion</h1>
        <div class="form-container">
            <div class="login-input">
                <label for="inputEmail" class="login-input-title">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control login-input-enter" autocomplete="email" required autofocus>
            </div>
            <div class="login-input">
                <label for="inputPassword" class="login-input-title">Mot de Passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control login-input-enter" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            <div class="checkbox mb-3">
                <label class="login-checkbox">
                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                </label>
            </div>

            <button class="btn btn-lg btn-primary login-button" type="submit">
                Se connecter
            </button>
        </div>
    </form>

</section>
{% endblock %}
