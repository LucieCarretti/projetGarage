<!-- src/Resources/config/doctrine/AvisClients.mongodb.xml -->
<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                    https://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <document name="App\Document\AvisClients">
        <id />
        <field field-name="nom" type="string" />
        <field field-name="prenom" type="string" />
        <field field-name="contenu" type="string" />
        <field field-name="etoiles" type="integer" />
        <field field-name="affiche" type="boolean" />
    </document>
</doctrine-mongo-mapping>